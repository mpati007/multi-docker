{
   "AWSEBDockerrunVersion": 2,
   "containerDefinitions": [
       {
          "name" : "client",
          "image" : "mpati007/multi-client",
          "hostname" : "client",
          "essential" : false,
          "memory" : 128
       },
       {
          "name" : "server",
          "image" : "mpati007/multi-server",
          "hostname" : "api",
          "essential" : false,
          "memory" : 128
       },
       {
          "name" : "worker",
          "image" : "mpati007/multi-worker",
          "hostname" : "worker",
          "essential" : false,
          "memory" : 128
       },
       {
          "name" : "nginx",
          "image" : "mpati007/multi-nginx",
          "hostname" : "nginx",
          "essential" : true,
          "memory" : 128,
          "portMappings:" : [
             {
                "hostPort": 80,
                "containerPort": 80
             }
          ],
          "links" : ["clinet", "server"]
       }
       
   ]
}
